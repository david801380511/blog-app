generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  posts Post[]

  @@map("categories")
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  categoryId Int      @map("category_id")
  category   Category @relation(fields: [categoryId], references: [id])

  @@map("posts")
}
